@model GioHang
@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    // Tính tổng tiền dựa trên List GioHangChiTiets
    decimal totalAmount = Model.GioHangChiTiets.Sum(x => x.SoLuong * (x.MatHang?.GiaBan ?? 0));
}

<section class="py-5">
    <div class="container">
        <h2 class="mb-4">Giỏ hàng (@Model.GioHangChiTiets.Count sản phẩm)</h2>

        @if (Model.GioHangChiTiets.Any())
        {
            <div class="row">
                <div class="col-lg-8 mb-4">
                    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                        <div class="table-responsive">
                            <table class="table align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="border-0 p-3">Sản phẩm</th>
                                        <th class="border-0 p-3">Giá</th>
                                        <th class="border-0 p-3">Số lượng</th>
                                        <th class="border-0 p-3 text-end">Thành tiền</th>
                                        <th class="border-0 p-3"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.GioHangChiTiets)
                                    {
                                        <tr>
                                            <td class="p-3">
                                                <div class="d-flex align-items-center">
                                                    @* Lưu ý: item.MatHang có thể null nếu không Include, nhưng Service đã Include rồi *@
                                                    <img src="~/images/MatHang/@(string.IsNullOrEmpty(item.MatHang?.HinhAnh) ? "no-image.png" : item.MatHang.HinhAnh)"
                                                         class="rounded-3 me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                                    <div>
                                                        <h6 class="mb-0">
                                                            <a href="~/Product/Detail/@item.MaMatHang" class="text-decoration-none text-dark">
                                                                @(item.MatHang?.TenMatHang ?? "Không xác định")
                                                            </a>
                                                        </h6>
                                                        <small class="text-muted">ĐVT: @(item.MatHang?.DonViTinh ?? "-")</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="p-3">@((item.MatHang?.GiaBan ?? 0).ToString("N0")) ₫</td>
                                            <td class="p-3">
                                                <form action="~/Cart/Update" method="post" class="d-flex" style="width: 120px;">
                                                    <input type="hidden" name="id" value="@item.MaMatHang" />
                                                    <input type="number" name="quantity" value="@item.SoLuong" min="1"
                                                           class="form-control form-control-sm text-center"
                                                           onchange="this.form.submit()">
                                                </form>
                                            </td>
                                            <td class="p-3 text-end fw-bold">
                                                @((item.SoLuong * (item.MatHang?.GiaBan ?? 0)).ToString("N0")) ₫
                                            </td>
                                            <td class="p-3 text-end">
                                                <a href="~/Cart/Remove/@item.MaMatHang" class="text-danger">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer bg-white border-0 p-3 text-end">
                            <a href="~/Cart/Clear" class="btn btn-outline-danger btn-sm" onclick="return confirm('Xóa sạch?')">
                                Xóa tất cả
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm rounded-4 p-4">
                        <h5 class="card-title fw-bold mb-4">Cộng giỏ hàng</h5>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5 mb-0">Tổng cộng:</span>
                            <span class="h5 mb-0 text-primary">@totalAmount.ToString("N0") ₫</span>
                        </div>
                        <a href="~/Order/Create" class="btn btn-primary w-100 py-2 fw-bold text-uppercase">
                            Tiến hành đặt hàng
                        </a>
                        <a href="~/Product" class="btn btn-outline-primary py-2 fw-bold text-uppercase rounded-3">
                            <i class="bi bi-arrow-left me-2"></i> Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <h4>Giỏ hàng trống</h4>
                <a href="~/Product" class="btn btn-primary px-4 mt-3">Mua sắm ngay</a>
            </div>
        }
    </div>
</section>