@model CheckoutViewModel
@{
    ViewData["Title"] = "Xác nhận đặt hàng";
    var listTinh = ViewBag.ListTinhThanh as List<Models.TinhThanh>;
}

<div class="container py-5">
    <h2 class="mb-4 text-primary"><i class="fa fa-check-circle"></i> Xác nhận đặt hàng</h2>

    <form asp-action="ConfirmOrder" method="post">
        <div class="row">
            <div class="col-md-7">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Thông tin giao hàng</h5>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label text-muted">Người nhận</label>
                                <input type="text" class="form-control bg-light" value="@Model.TenKhachHang" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-muted">Số điện thoại</label>
                                <input type="text" class="form-control bg-light" value="@Model.SoDienThoai" readonly />
                                <small class="text-muted">Sử dụng SĐT đăng ký tài khoản</small>
                            </div>
                        </div>

                        <hr />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Địa chỉ nhận hàng <span class="text-danger">*</span></label>
                            <input asp-for="DiaChiGiaoHang" class="form-control" placeholder="Số nhà, tên đường..." required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Tỉnh / Thành phố <span class="text-danger">*</span></label>
                            <select asp-for="MaTinh" class="form-select" required>
                                <option value="">-- Chọn Tỉnh/Thành --</option>
                                @if (listTinh != null)
                                {
                                    foreach (var tinh in listTinh)
                                    {
                                        <option value="@tinh.MaTinh">@tinh.TenTinh</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-5">
                <div class="card shadow-sm bg-light">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Đơn hàng của bạn (@(Model.Items != null ? Model.Items.Count : 0) sản phẩm)</h5>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            @if (Model.Items != null)
                            {
                                foreach (var item in Model.Items)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            @if (item.MatHang != null && !string.IsNullOrEmpty(item.MatHang.HinhAnh))
                                            {
                                                <img src="@item.MatHang.HinhAnh" style="width: 40px; height: 40px; object-fit: cover;" class="me-2 rounded border" />
                                            }
                                            <div>
                                                <h6 class="my-0">@item.MatHang?.TenMatHang</h6>
                                                <small class="text-muted">SL: @item.SoLuong x @item.MatHang?.GiaBan.ToString("N0")</small>
                                            </div>
                                        </div>
                                        <span class="text-success fw-bold">@((item.SoLuong * (item.MatHang?.GiaBan ?? 0)).ToString("N0")) ₫</span>
                                    </li>
                                }
                            }

                            <li class="list-group-item d-flex justify-content-between bg-white">
                                <span>Tổng tiền hàng:</span>
                                <strong>@Model.TongTienTamTinh.ToString("N0") ₫</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between bg-white">
                                <span>Phí vận chuyển:</span>
                                <span class="text-success">Miễn phí</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between bg-white border-top">
                                <strong class="fs-5">Thành tiền:</strong>
                                <strong class="fs-4 text-danger">@Model.TongTienTamTinh.ToString("N0") ₫</strong>
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer p-3">
                        <button type="submit" class="btn btn-success w-100 py-2 fs-5">
                            <i class="fa fa-paper-plane"></i> ĐẶT HÀNG NGAY
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">Quay lại giỏ hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>