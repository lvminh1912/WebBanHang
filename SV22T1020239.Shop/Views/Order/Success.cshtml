@model int
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="text-center py-5">
    <div class="display-1 text-success mb-3"><i class="fa fa-check-circle"></i></div>
    <h1 class="text-success">Đặt hàng thành công!</h1>
    <p class="lead">Mã đơn hàng của bạn là: <strong>#@Model</strong></p>
