@inject GioHangService _gioHangService

@{
    GioHang? gioHang = null;

    if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        var userIdStr = User.FindFirstValue(ClaimTypes.NameIdentifier);

        if (!string.IsNullOrEmpty(userIdStr) && int.TryParse(userIdStr, out int userId))
        {
            gioHang = await _gioHangService.GetGioHangByKhachHangID(userId);
        }
    }
}

<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasCart" aria-labelledby="offcanvasCartLabel">
    <div class="offcanvas-header justify-content-center">
        <h5 class="offcanvas-title" id="offcanvasCartLabel">Giỏ hàng của bạn</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>

    <div class="offcanvas-body">
        @if (gioHang != null && gioHang.GioHangChiTiets != null && gioHang.GioHangChiTiets.Any())
        {
            <ul class="list-group mb-4 border-0">
                @foreach (var item in gioHang.GioHangChiTiets)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-3">
                        <div class="d-flex align-items-center">
                            <img src="@(string.IsNullOrEmpty(item.MatHang?.HinhAnh) ? "/images/no-image.png" : $"/images/MatHang/{item.MatHang.HinhAnh}")"
                                 class="img-fluid rounded-3 me-3"
                                 style="width: 60px; height: 60px; object-fit: cover;"
                                 alt="@item.MatHang?.TenMatHang">

                            <div>
                                <h6 class="mb-1">@item.MatHang?.TenMatHang</h6>
                                <small class="text-muted">SL: @item.SoLuong</small>
                            </div>
                        </div>
                        <div class="text-end">
                            <span class="text-primary fw-bold d-block">@((item.SoLuong * (item.MatHang?.GiaBan ?? 0)).ToString("N0")) ₫</span>
                            <a href="~/Cart/Remove/@item.MaMatHang" class="text-danger small text-decoration-none">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </div>
                    </li>
                }
            </ul>

            <div class="d-flex justify-content-between mb-4 border-top pt-3">
                <span class="h5 mb-0">Tổng cộng:</span>
                <span class="h5 mb-0 text-primary">
                    @(gioHang.GioHangChiTiets.Sum(x => x.SoLuong * (x.MatHang?.GiaBan ?? 0)).ToString("N0")) ₫
                </span>
            </div>

            <div class="d-grid gap-2">
                <a href="~/Cart" class="btn btn-primary py-2 fw-bold">Xem giỏ hàng chi tiết</a>
                <!-- <a href="~/Order/Create" class="btn btn-dark py-2 fw-bold">Thanh toán ngay</a> -->
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-3 text-muted display-1">
                    <i class="bi bi-cart-x"></i>
                </div>
                <h5>Giỏ hàng trống</h5>
                <p class="text-muted mb-4">Bạn chưa chọn sản phẩm nào.</p>
                <a href="~/Product" class="btn btn-primary rounded-pill px-4">Mua sắm ngay</a>
            </div>
        }
    </div>
</div>