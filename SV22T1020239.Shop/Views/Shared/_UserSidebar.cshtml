@{
    string action = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}

<div class="card border-0 shadow-sm rounded-4">
    <div class="card-body p-0">
        <div class="list-group list-group-flush rounded-4 overflow-hidden">
            <a href="~/User/Index" class="list-group-item list-group-item-action p-3 @(action == "Index" ? "active" : "")">
                <i class="bi bi-speedometer2 me-2"></i> Tổng quan
            </a>
            <a href="~/User/Profile" class="list-group-item list-group-item-action p-3 @(action == "Profile" ? "active" : "")">
                <i class="bi bi-person me-2"></i> Hồ sơ cá nhân
            </a>
            <a href="~/User/Orders" class="list-group-item list-group-item-action p-3 @(action == "Orders" ? "active" : "")">
                <i class="bi bi-bag-check me-2"></i> Lịch sử đơn hàng
            </a>
            <a href="~/User/Password" class="list-group-item list-group-item-action p-3 @(action == "Password" ? "active" : "")">
                <i class="bi bi-lock me-2"></i> Đổi mật khẩu
            </a>
            <a href="~/User/Logout" class="list-group-item list-group-item-action p-3 text-danger">
                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
            </a>
        </div>
    </div>
</div>