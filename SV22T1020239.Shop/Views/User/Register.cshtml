@model Models.KhachHang
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "_AuthLayout";
}

<section class="py-5" style="background: #f9f9f9; min-height: 90vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-5">
                <div class="card border-0 shadow-sm rounded-4 p-4 p-md-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">Tạo tài khoản mới</h2>
                        <p class="text-muted">Tham gia cùng FoodMart để nhận nhiều ưu đãi</p>
                    </div>

                    @* Hiển thị tổng hợp lỗi từ server (như trùng Email) *@
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <form asp-controller="User" asp-action="Register" method="post">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label class="form-label fw-bold">Họ và tên</label>
                                <input type="text" asp-for="HoTen" class="form-control form-control-lg bg-light border-0" placeholder="Nguyễn Văn A" required>
                                <span asp-validation-for="HoTen" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Địa chỉ Email</label>
                            <input type="email" asp-for="Email" class="form-control form-control-lg bg-light border-0" placeholder="name@example.com" required>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Mật khẩu</label>
                                <input type="password" asp-for="MatKhau" class="form-control form-control-lg bg-light border-0" required>
                                <span asp-validation-for="MatKhau" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Xác nhận mật khẩu</label>
                                @* Trường này không nằm trong model KhachHang nên dùng name để khớp với tham số confirmPassword trong Controller *@
                                <input type="password" name="confirmPassword" class="form-control form-control-lg bg-light border-0" required>
                                @* Hiển thị lỗi cụ thể cho confirmPassword nếu có *@
                                @if (ViewData.ModelState["confirmPassword"] != null && ViewData.ModelState["confirmPassword"]!.Errors.Any())
                                {
                                    <span class="text-danger small">@ViewData.ModelState["confirmPassword"]!.Errors[0].ErrorMessage</span>
                                }
                            </div>
                        </div>

                        <div class="mb-4 form-check">
                            <input type="checkbox" class="form-check-input" id="terms" required>
                            <label class="form-check-label small" for="terms">Tôi đồng ý với các <a href="#" class="text-primary">Điều khoản & Chính sách</a></label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-yellow btn-lg text-uppercase fw-bold py-3 rounded-3">Đăng ký ngay</button>
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <p class="mb-0 text-muted">Đã có tài khoản? <a asp-controller="User" asp-action="Login" class="text-primary fw-bold text-decoration-none">Đăng nhập</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}