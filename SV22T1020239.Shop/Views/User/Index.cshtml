@{
    ViewData["Title"] = "Tài khoản của tôi";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 mb-4">
                <partial name="_UserSidebar" />
            </div>

            <div class="col-lg-9">
                <div class="card border-0 shadow-sm rounded-4 p-4 text-center">
                    <img src="~/images/logo.png" style="width:150px" class="mx-auto mb-3" />
                    <h3 class="mb-2">Xin chào, @User.Identity?.Name!</h3>
                    <p class="text-muted">Chào mừng bạn trở lại với trang quản lý tài khoản.</p>
                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="p-3 border rounded-3 bg-white">
                                <h2 class="text-primary mb-0"><i class="bi bi-cart-check"></i></h2>
                                <p class="mb-0 mt-2 fw-bold"><a href="~/User/Orders" class="text-decoration-none text-dark">Đơn hàng</a></p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 border rounded-3 bg-white">
                                <h2 class="text-success mb-0"><i class="bi bi-person-gear"></i></h2>
                                <p class="mb-0 mt-2 fw-bold"><a href="~/User/Profile" class="text-decoration-none text-dark">Hồ sơ</a></p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 border rounded-3 bg-white">
                                <h2 class="text-danger mb-0"><i class="bi bi-shield-lock"></i></h2>
                                <p class="mb-0 mt-2 fw-bold"><a href="~/User/Password" class="text-decoration-none text-dark">Bảo mật</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>