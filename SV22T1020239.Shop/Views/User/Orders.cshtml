@model List<Models.DonHang>
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 mb-4">
                <partial name="_UserSidebar" />
            </div>

            <div class="col-lg-9">
                <div class="card border-0 shadow-sm rounded-4 p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="mb-0">Đơn hàng của tôi</h4>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Lọc đơn hàng
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="~/User/Orders">Tất cả</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="~/User/Orders?status=1">Mới</a></li>
                                <li><a class="dropdown-item" href="~/User/Orders?status=2">Xác nhận</a></li>
                                <li><a class="dropdown-item" href="~/User/Orders?status=3">Đang giao</a></li>
                                <li><a class="dropdown-item" href="~/User/Orders?status=4">Hoàn tất</a></li>
                                <li><a class="dropdown-item" href="~/User/Orders?status=5">Đã hủy</a></li>
                            </ul>
                        </div>

                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Ngày đặt</th>
                                        <th>Trạng thái</th>
                                        <th>Tổng tiền</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="fw-bold">#@item.MaDonHang</td>
                                            <td>@item.NgayDat?.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                @if (item.MaTrangThai == 1)
                                                {
                                                    <span class="badge bg-warning text-dark">Đơn hàng mới</span>
                                                }
                                                else if (item.MaTrangThai == 2)
                                                {

                                                    <span class="badge bg-gradient text-dark">Đã xác nhận</span>
                                                }
                                                else if (item.MaTrangThai == 3)
                                                {

                                                    <span class="badge bg-info text-dark">Đang giao</span>
                                                }
                                                else if (item.MaTrangThai == 4)
                                                {

                                                    <span class="badge bg-success text-dark">Hoàn thành</span>
                                                }
                                                else if (item.MaTrangThai == 5)
                                                {

                                                    <span class="badge bg-danger text-white">Đã hủy</span>
                                                }
                                                else
                                                {

                                                    <span class="badge bg-secondary text-dark">@item.TrangThaiDon?.TenTrangThai</span>
                                                }
                                            </td>
                                            <td class="text-primary fw-bold">@item.TongTien?.ToString("N0") ₫</td>
                                            <td class="text-end">
                                                <a asp-controller="Order" asp-action="Detail" asp-route-id="@item.MaDonHang"
                                                   class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                                    Chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-inbox fs-1"></i>
                            <p>Bạn chưa có đơn hàng nào.</p>
                            <a href="~/" class="btn btn-primary btn-sm">Mua sắm ngay</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>