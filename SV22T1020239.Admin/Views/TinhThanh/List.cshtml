@model PaginatedList<TinhThanh>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th style="width: 100px;" class="text-center">Mã Tỉnh</th>
                <th>Tên Tỉnh / Thành Phố</th>
                <th class="text-end" style="width: 150px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items.Any())
            {
                foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="text-center">
                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25">
                                #@item.MaTinh
                            </span>
                        </td>
                        <td>
                            <strong class="text-dark">@item.TenTinh</strong>
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.MaTinh" class="btn btn-sm btn-outline-primary" title="Sửa">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button class="btn btn-sm btn-outline-danger ms-1" onclick="confirmDelete(@item.MaTinh, '@item.TenTinh')" title="Xóa">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center py-5 text-muted">
                        <i class="bi bi-map fs-1 d-block mb-2"></i>
                        Không tìm thấy địa phương nào.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 1)
{
    <div class="d-flex justify-content-between align-items-center p-3 border-top">
        <div class="text-muted small">
            Trang <strong>@Model.PageIndex</strong> / <strong>@Model.TotalPages</strong>
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.PageIndex - 1))">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" href="javascript:void(0)" onclick="loadPage(@i)">@i</a>
                    </li>
                }
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.PageIndex + 1))">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}