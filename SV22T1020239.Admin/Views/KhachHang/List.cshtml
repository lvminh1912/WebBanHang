@model PaginatedList<KhachHang>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th style="width: 70px;">Avatar</th>
                <th>Thông tin cá nhân</th>
                <th>Liên hệ</th>
                <th>Địa chỉ</th>
                <th class="text-center">Vai trò</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-end" style="width: 160px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items.Any())
            {
                foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <div class="rounded-circle border d-flex align-items-center justify-content-center overflow-hidden" style="width: 48px; height: 48px; background-color: #f8f9fa;">
                                @if (!string.IsNullOrEmpty(item.HinhAnh))
                                {
                                    <img src="@item.HinhAnh" class="w-100 h-100" style="object-fit: cover;" onerror="this.src='/images/no-image.png'" />
                                }
                                else
                                {
                                    <i class="bi bi-person text-secondary fs-4"></i>
                                }
                            </div>
                        </td>
                        <td>
                            <strong class="text-dark">@item.HoTen</strong>
                            <div class="small text-muted">Mã: #@item.MaKhachHang</div>
                        </td>
                        <td>
                            <div><i class="bi bi-telephone text-muted me-1"></i> @item.DienThoai</div>
                            <div class="small text-muted"><i class="bi bi-envelope text-muted me-1"></i> @item.Email</div>
                        </td>
                        <td class="small">
                            <div>@item.DiaChi</div>
                            <span class="text-primary">@item.TinhThanh?.TenTinh</span>
                        </td>
                        <td class="text-center">
                            @if (item.VaiTro?.Trim().ToLower() == "admin")
                            {
                                <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25">Quản trị viên</span>
                            }
                            else
                            {
                                <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25">Người dùng</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.DangHoatDong)
                            {
                                <span class="badge bg-success rounded-pill">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary rounded-pill">Đã khóa</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-controller="GioHang" asp-action="Index" asp-route-maKhachHang="@item.MaKhachHang" class="btn btn-sm btn-outline-info" title="Xem giỏ hàng">
                                <i class="bi bi-cart"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.MaKhachHang" class="btn btn-sm btn-outline-primary" title="Sửa thông tin">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button class="btn btn-sm btn-outline-danger ms-1" onclick="confirmDelete(@item.MaKhachHang, '@item.HoTen')" title="Xóa tài khoản">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center py-5 text-muted">
                        <i class="bi bi-people fs-1 d-block mb-2"></i>
                        Không tìm thấy khách hàng nào phù hợp.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 1)
{
    <div class="d-flex justify-content-between align-items-center p-3 border-top">
        <div class="text-muted small">
            Hiển thị trang <strong>@Model.PageIndex</strong> trên tổng số <strong>@Model.TotalPages</strong>
        </div>

        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.PageIndex - 1))">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == 1 || i == Model.TotalPages || (i >= Model.PageIndex - 2 && i <= Model.PageIndex + 2))
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" href="javascript:void(0)" onclick="loadPage(@i)">@i</a>
                        </li>
                    }
                    else if (i == Model.PageIndex - 3 || i == Model.PageIndex + 3)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.PageIndex + 1))">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}