@model ErrorViewModel
@{
    ViewData["Title"] = "Lỗi hệ thống";
}

<div class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="text-center">
        <h1 class="display-1 fw-bold text-danger">Oops!</h1>
        <p class="fs-3"> <span class="text-danger">Lỗi!</span> Đã xảy ra sự cố.</p>
        <p class="lead">
            Hệ thống gặp vấn đề khi xử lý yêu cầu của bạn.
        </p>

        @if (Model.ShowRequestId)
        {
            <div class="alert alert-warning d-inline-block">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </div>
        }

        <div class="mt-4">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="bi bi-house-door"></i> Quay về trang chủ
            </a>
        </div>
    </div>
</div>