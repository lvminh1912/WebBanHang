@model PaginatedList<DonHang>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th style="width: 100px;">Mã Đơn</th>
                <th>Khách Hàng</th>
                <th>Ngày Đặt</th>
                <th class="text-end">Tổng Tiền</th>
                <th class="text-center">Trạng Thái</th>
                <th class="text-end" style="width: 120px;">Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items.Count == 0)
            {
                <tr>
                    <td colspan="6" class="text-center py-5 text-muted">
                        <i class="bi bi-clipboard-x fs-1 d-block mb-2"></i>
                        Không tìm thấy đơn hàng nào.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <span class="fw-bold text-primary">#@item.MaDonHang</span>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="me-2">
                                    @if (!string.IsNullOrEmpty(item.KhachHang?.HinhAnh))
                                    {
                                        <img src="~/images/KhachHang/@item.KhachHang.HinhAnh"
                                             alt="@item.KhachHang.HoTen"
                                             class="rounded-circle object-fit-cover border"
                                             style="width: 40px; height: 40px;"
                                             onerror="this.src='/images/no-image.png'" />
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center border text-primary fw-bold"
                                             style="width: 40px; height: 40px;">
                                            @(item.KhachHang?.HoTen?.Substring(0, 1) ?? "?")
                                        </div>
                                    }
                                </div>

                                <div>
                                    <div class="fw-bold text-dark">@item.KhachHang?.HoTen</div>
                                    <div class="small text-muted">@item.KhachHang?.DienThoai</div>
                                </div>
                            </div>
                        </td>
                        <td class="small">
                            <i class="bi bi-calendar3 text-muted me-1"></i>
                            @item.NgayDat?.ToString("dd/MM/yyyy HH:mm")
                        </td>
                        <td class="text-end fw-bold text-dark">
                            @item.TongTien?.ToString("N0") ₫
                        </td>
                        <td class="text-center">
                            @{
                                string badgeClass = item.MaTrangThai switch
                                {
                                    1 => "bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25", // Mới
                                    2 => "bg-info bg-opacity-10 text-info border border-info border-opacity-25",          // Đã xác nhận
                                    3 => "bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25", // Đang giao
                                    4 => "bg-success bg-opacity-10 text-success border border-success border-opacity-25", // Thành công
                                    5 => "bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25",    // Hủy
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge rounded-pill @badgeClass">@item.TrangThaiDon?.TenTrangThai</span>
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.MaDonHang" class="btn btn-sm btn-outline-primary">
                                Xem <i class="bi bi-arrow-right"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 1)
{
    <div class="d-flex justify-content-between align-items-center p-3 border-top">
        <div class="text-muted small">
            Trang <strong>@Model.PageIndex</strong> / <strong>@Model.TotalPages</strong>
        </div>
        <nav>
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.PageIndex - 1))"><i class="bi bi-chevron-left"></i></a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == 1 || i == Model.TotalPages || (i >= Model.PageIndex - 2 && i <= Model.PageIndex + 2))
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" href="javascript:void(0)" onclick="loadPage(@i)">@i</a>
                        </li>
                    }
                    else if (i == Model.PageIndex - 3 || i == Model.PageIndex + 3)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.PageIndex + 1))"><i class="bi bi-chevron-right"></i></a>
                </li>
            </ul>
        </nav>
    </div>
}