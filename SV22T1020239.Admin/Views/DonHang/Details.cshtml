@model DonHang

<div class="container-fluid p-0">
    <div class="row mb-3 align-items-center">
        <div class="col-auto">
            <h3 class="mb-0"><strong>Chi tiết đơn hàng</strong> #@Model.MaDonHang</h3>
            <span class="text-muted small">Ngày đặt: @Model.NgayDat?.ToString("dd/MM/yyyy HH:mm")</span>
        </div>
        <div class="col-auto ms-auto d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.MaDonHang" class="btn btn-warning shadow-sm">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary shadow-sm">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button onclick="window.print()" class="btn btn-outline-primary shadow-sm d-none d-md-inline-block">
                <i class="bi bi-printer"></i> In hóa đơn
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">Sản phẩm đã đặt</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Sản phẩm</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end pe-4">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DonHangChiTiets)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            @if (item.MatHang != null)
                                            {
                                                <img src="/images/MatHang/@item.MatHang.HinhAnh" width="40" class="rounded me-2 border" onerror="this.src='/images/no-image.png'" />
                                                <span class="fw-medium">@item.MatHang.TenMatHang</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Sản phẩm đã xóa</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-center">@item.SoLuong</td>
                                    <td class="text-end">@item.DonGia.ToString("N0")</td>
                                    <td class="text-end pe-4 fw-bold">@((item.SoLuong * item.DonGia).ToString("N0"))</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light">
                            <tr>
                                <td colspan="3" class="text-end fw-bold text-uppercase pt-3">Tổng cộng:</td>
                                <td class="text-end text-primary fs-4 fw-bold pe-4 pt-3">@Model.TongTien?.ToString("N0") ₫</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">Thông tin khách hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="small text-muted text-uppercase fw-bold">Họ tên</label>
                            <div class="fw-medium">@Model.KhachHang?.HoTen</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="small text-muted text-uppercase fw-bold">Số điện thoại</label>
                            <div>@Model.KhachHang?.DienThoai</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="small text-muted text-uppercase fw-bold">Email</label>
                            <div>@Model.KhachHang?.Email</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="small text-muted text-uppercase fw-bold">Địa chỉ giao hàng</label>
                            <div>@Model.DiaChiGiaoHang, @Model.TinhThanh?.TenTinh</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-warning bg-opacity-10 py-3">
                    <h5 class="card-title mb-0 text-warning-emphasis">Cập nhật trạng thái</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" name="id" value="@Model.MaDonHang" />
                        <div class="mb-3">
                            <select name="maTrangThai" class="form-select" asp-items="ViewBag.TrangThais"></select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Cập nhật ngay</button>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">Lịch sử đơn hàng</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0 border-start border-2 ms-2 ps-3 border-primary">
                        <li class="mb-4 position-relative">
                            <div class="position-absolute top-0 start-0 translate-middle rounded-circle bg-primary" style="width: 12px; height: 12px; margin-left: -17px; margin-top: 6px;"></div>
                            <div class="fw-bold">Đặt hàng thành công</div>
                            <div class="small text-muted">@Model.NgayDat?.ToString("dd/MM/yyyy HH:mm")</div>
                        </li>
                        @if (Model.NgayDi.HasValue)
                        {
                            <li class="mb-4 position-relative">
                                <div class="position-absolute top-0 start-0 translate-middle rounded-circle bg-info" style="width: 12px; height: 12px; margin-left: -17px; margin-top: 6px;"></div>
                                <div class="fw-bold">Đang giao hàng</div>
                                <div class="small text-muted">@Model.NgayDi?.ToString("dd/MM/yyyy HH:mm")</div>
                            </li>
                        }
                        @if (Model.NgayDen.HasValue)
                        {
                            <li class="mb-0 position-relative">
                                <div class="position-absolute top-0 start-0 translate-middle rounded-circle bg-success" style="width: 12px; height: 12px; margin-left: -17px; margin-top: 6px;"></div>
                                <div class="fw-bold text-success">Giao thành công</div>
                                <div class="small text-muted">@Model.NgayDen?.ToString("dd/MM/yyyy HH:mm")</div>
                            </li>
                        }
                        @if (Model.NgayHuy.HasValue)
                        {
                            <li class="mb-0 position-relative">
                                <div class="position-absolute top-0 start-0 translate-middle rounded-circle bg-danger" style="width: 12px; height: 12px; margin-left: -17px; margin-top: 6px;"></div>
                                <div class="fw-bold text-danger">Đã hủy đơn</div>
                                <div class="small text-muted">@Model.NgayHuy?.ToString("dd/MM/yyyy HH:mm")</div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>