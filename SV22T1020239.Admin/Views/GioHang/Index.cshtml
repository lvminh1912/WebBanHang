@model GioHangViewModel
@{
    ViewData["Title"] = $"Giỏ hàng: {Model.KhachHang?.HoTen}";
}

<div class="container-fluid p-0">
    <div class="mb-3 d-flex justify-content-between align-items-center">
        <div>
            <h3 class="d-inline-block mb-0"><strong>Chi tiết giỏ hàng</strong></h3>
            <div class="text-muted small mt-1">
                Đang xem giỏ hàng của khách: <strong>@Model.KhachHang?.HoTen</strong>
            </div>
        </div>
        <a asp-controller="KhachHang" asp-action="Index" class="btn btn-secondary shadow-sm">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách khách
        </a>
    </div>

    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="card-title mb-0">Sản phẩm trong giỏ (@Model.TongSoLuong)</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 100px;" class="ps-4">Ảnh</th>
                                <th>Sản phẩm</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-center">SL</th>
                                <th class="text-end pe-4">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Items != null && Model.Items.Any())
                            {
                                foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="bg-light rounded border d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                <img src="/images/MatHang/@item.HinhAnh" class="w-100 h-100 object-fit-cover rounded" onerror="this.src='/images/no-image.png'" />
                                            </div>
                                        </td>
                                        <td>
                                            <div class="fw-bold text-dark">@item.TenMatHang</div>
                                            <div class="small text-muted">Mã: #@item.MaMatHang</div>
                                        </td>
                                        <td class="text-end">@item.DonGia.ToString("N0") ₫</td>
                                        <td class="text-center">
                                            <span class="badge bg-light text-dark border border-secondary">x @item.SoLuong</span>
                                        </td>
                                        <td class="text-end pe-4 fw-bold text-primary">
                                            @item.ThanhTien.ToString("N0") ₫
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5">
                                        <div class="mb-3">
                                            <i class="bi bi-cart-x text-muted" style="font-size: 4rem;"></i>
                                        </div>
                                        <h5 class="text-muted">Giỏ hàng trống</h5>
                                        <p class="text-muted small">Khách hàng này chưa thêm sản phẩm nào vào giỏ.</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @if (Model.Items != null && Model.Items.Any())
            {
                <div class="mt-3 text-end">
                    <button class="btn btn-outline-danger btn-sm" onclick="alert('Chức năng đang phát triển')">
                        <i class="bi bi-trash"></i> Xóa toàn bộ giỏ
                    </button>
                </div>
            }
        </div>

        <div class="col-12 col-lg-4">

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="card-title mb-0 text-white">Tổng quan đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Tạm tính:</span>
                        <span class="fw-bold">@Model.TongTien.ToString("N0") ₫</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Phí vận chuyển:</span>
                        <span class="text-success">Miễn phí</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="fs-5 fw-bold text-dark">Tổng cộng:</span>
                        <span class="fs-4 fw-bold text-danger">@Model.TongTien.ToString("N0") ₫</span>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-success btn-lg shadow-sm" @(Model.Items?.Count == 0 ? "disabled" : "")>
                            <i class="bi bi-check-lg"></i> Tạo đơn hàng ngay
                        </button>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="card-title mb-0">Thông tin khách hàng</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-light border d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            @if (!string.IsNullOrEmpty(Model.KhachHang?.HinhAnh))
                            {
                                <img src="/images/KhachHang/@Model.KhachHang.HinhAnh" class="w-100 h-100 rounded-circle object-fit-cover" />
                            }
                            else
                            {
                                <i class="bi bi-person text-secondary fs-3"></i>
                            }
                        </div>
                        <div>
                            <div class="fw-bold">@Model.KhachHang?.HoTen</div>
                            <div class="small text-muted">ID: #@Model.KhachHang?.MaKhachHang</div>
                        </div>
                    </div>

                    <ul class="list-unstyled mb-0 font-sm">
                        <li class="mb-2">
                            <i class="bi bi-telephone text-primary me-2"></i> @Model.KhachHang?.DienThoai
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-envelope text-primary me-2"></i> @Model.KhachHang?.Email
                        </li>
                        <li>
                            <i class="bi bi-geo-alt text-primary me-2"></i> @Model.KhachHang?.DiaChi
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>