@model PaginatedList<MatHang>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th style="width: 80px;">Ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Phân loại</th>
                <th class="text-end">Giá bán</th>
                <th class="text-center">Tồn kho</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-end" style="width: 140px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items.Any())
            {
                foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <div class="bg-light rounded d-flex align-items-center justify-content-center border" style="width: 48px; height: 48px; overflow: hidden;">
                                @if (!string.IsNullOrEmpty(item.HinhAnh))
                                {
                                    <img src="/images/MatHang/@item.HinhAnh" class="w-100 h-100" style="object-fit: cover;" onerror="this.src='/images/no-image.png'" />
                                }
                                else
                                {
                                    <i class="bi bi-image text-muted fs-4"></i>
                                }
                            </div>
                        </td>
                        <td class="fw-medium">@item.TenMatHang</td>
                        <td>
                            <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25">
                                @(item.LoaiHang?.TenLoaiHang ?? "N/A")
                            </span>
                        </td>
                        <td class="text-end fw-bold text-primary">
                            @item.GiaBan.ToString("N0") ₫
                        </td>
                        <td class="text-center">
                            @if (item.SoLuong <= 5)
                            {
                                <span class="text-danger fw-bold">@item.SoLuong</span>
                            }
                            else
                            {
                                <span>@item.SoLuong</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.DangBan == true)
                            {
                                <span class="badge bg-success rounded-pill">Đang bán</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary rounded-pill">Ngừng bán</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.MaMatHang" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-danger ms-1" onclick="confirmDelete(@item.MaMatHang, '@item.TenMatHang')" title="Xóa">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center py-5 text-muted">
                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                        Không tìm thấy sản phẩm nào phù hợp.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 1) 
{
    <div class="d-flex justify-content-between align-items-center p-3 border-top">
        <div class="text-muted small">
            Hiển thị trang <strong>@Model.PageIndex</strong> trên tổng số <strong>@Model.TotalPages</strong>
        </div>

        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.PageIndex - 1))">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    // Chỉ hiện trang đầu, trang cuối, và các trang xung quanh trang hiện tại
                    if (i == 1 || i == Model.TotalPages || (i >= Model.PageIndex - 2 && i <= Model.PageIndex + 2))
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" href="javascript:void(0)" onclick="loadPage(@i)">@i</a>
                        </li>
                    }
                    else if (i == Model.PageIndex - 3 || i == Model.PageIndex + 3)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.PageIndex + 1))">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}