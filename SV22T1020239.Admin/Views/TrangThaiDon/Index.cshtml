@model PaginatedList<TrangThaiDon>
@{
    ViewData["Title"] = "Cấu hình trạng thái đơn";
}

<div class="container-fluid p-0">
    <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
            <h3 class="d-inline-block"><strong>Quản lý Trạng Thái Đơn</strong></h3>
        </div>
        <div class="col-auto ms-auto text-end mt-n1">
            <a asp-action="Edit" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-lg"></i> Thêm trạng thái mới
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Bộ lọc tìm kiếm</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" id="searchForm">
                <div class="row g-3">
                    <div class="col-md-8">
                        <label class="form-label">Tên trạng thái</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                            <input type="text" name="keyword" value="@ViewBag.SearchModel?.Keyword" class="form-control" placeholder="Nhập tên trạng thái cần tìm...">
                        </div>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-funnel"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0 mt-3">
        <div class="card-body p-0">
            <div id="data-container">
                <partial name="List" model="Model" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.loadPage = function(page) {
            let data = {
                page: page,
                keyword: $('input[name="keyword"]').val()
            };

            $.ajax({
                url: '@Url.Action("Index", "TrangThaiDon")',
                type: 'GET',
                data: data,
                success: function(result) {
                    $('#data-container').html(result);
                    $('html, body').animate({ scrollTop: $("#data-container").offset().top - 150 }, 200);
                },
                error: function() { alert("Lỗi tải dữ liệu."); }
            });
        }

        $('form').submit(function(e) {
            e.preventDefault();
            loadPage(1);
        });

        window.confirmDelete = function(id, name) {
            // Không cho xóa các trạng thái hệ thống (1-5)
            if (id <= 5) {
                alert("Đây là trạng thái mặc định của hệ thống, không thể xóa!");
                return;
            }

            if (confirm(`Bạn có chắc muốn xóa trạng thái "${name}"? Các đơn hàng cũ có thể bị ảnh hưởng.`)) {
                $.ajax({
                    url: '@Url.Action("Delete", "TrangThaiDon")',
                    type: 'POST',
                    data: { id: id },
                    success: function(res) {
                        if(res.success) {
                            loadPage(1);
                        } else {
                            alert(res.message);
                        }
                    }
                });
            }
        }
    </script>
}