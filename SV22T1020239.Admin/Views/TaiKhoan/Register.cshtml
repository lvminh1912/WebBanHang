@model KhachHang
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng ký - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .register-cover {
            background: linear-gradient(135deg, #198754 0%, #146c43 100%); /* Màu xanh lá (Success) */
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .register-form-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: white;
        }

        .form-wrapper {
            width: 100%;
            max-width: 500px;
            padding: 40px;
        }

        .btn-success {
            padding: 12px;
            font-weight: 600;
            border-radius: 8px;
        }

        .form-control {
            padding: 12px 15px;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
        }

            .form-control:focus {
                background-color: #fff;
                box-shadow: 0 0 0 4px rgba(25, 135, 84, 0.15);
                border-color: #198754;
            }

        .logo-text {
            font-size: 2.5rem;
            font-weight: 800;
            letter-spacing: -1px;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid g-0">
        <div class="row g-0 flex-row-reverse">
            <div class="col-lg-6 d-none d-lg-block register-cover">
                <div class="text-center px-5">
                    <div class="logo-text">Muốn mua hàng thì phải có tài khoản 🚀</div>
                    <p class="lead">Tạo tài khoản của phía Admin nhưng mặc định là User, muốn làm Admin thì phải liên hệ Admin</p>
                </div>
            </div>

            <div class="col-lg-6 register-form-container">
                <div class="form-wrapper">
                    @if (ViewBag.Success != null)
                    {
                        <div class="text-center">
                            <div class="mb-4">
                                <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                            </div>
                            <h3 class="fw-bold mb-3">Đăng ký thành công!</h3>
                            <p class="text-muted mb-4">@ViewBag.Success</p>
                            <a href="/TaiKhoan/Login" class="btn btn-success w-100">Quay lại Đăng nhập</a>
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <h2 class="fw-bold">Tạo tài khoản mới</h2>
                            <p class="text-muted">Nhập thông tin cá nhân của bạn bên dưới.</p>
                        </div>

                        <form asp-action="Register" method="post">
                            <div class="mb-3">
                                <label class="form-label fw-bold small text-uppercase text-muted">Họ và Tên</label>
                                <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên đầy đủ" required />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold small text-uppercase text-muted">Email</label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" required />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold small text-uppercase text-muted">Số điện thoại</label>
                                    <input asp-for="DienThoai" class="form-control" placeholder="09xx..." />
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold small text-uppercase text-muted">Mật khẩu</label>
                                <input asp-for="MatKhau" type="password" class="form-control" placeholder="Tạo mật khẩu bảo mật" required />
                            </div>

                            <div class="form-check mb-4">
                                <input class="form-check-input" type="checkbox" id="terms">
                                <label class="form-check-label small" for="terms">
                                    Tôi đồng ý với <a href="#" class="text-success fw-bold">Điều khoản sử dụng</a> và <a href="#" class="text-success fw-bold">Chính sách bảo mật</a>.
                                </label>
                            </div>

                            <button type="submit" class="btn btn-success w-100 mb-4 shadow-sm">
                                Đăng ký tài khoản
                            </button>

                            <div class="text-center text-muted">
                                Đã có tài khoản?
                                <a href="/TaiKhoan/Login" class="text-decoration-none fw-bold text-success">Đăng nhập ngay</a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>